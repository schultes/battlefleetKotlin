<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thm.mow2.fleetbattlegameandroid">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FleetBattleGameAndroid">

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.GameActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.RegisterActivity"
            android:exported="false" />

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.OpenGamesActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.SingleplayerGameSettingsActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.MenuActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.PrepareGameActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.GameResultActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="de.thm.mow2.fleetbattlegameandroid.controller.MultiplayerGameSettingsActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>